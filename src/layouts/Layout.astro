---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <title>{title}</title>
</head>

<body>
  <slot />
</body>

</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;600&family=Raleway:wght@100;200;300;400;500;600;700;800;900&display=swap');

  :root {
    --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
    --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
    --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

    --color-text: rgb(100, 101, 105);
    --color-titles: rgb(143, 21, 56);
    --color-white: white;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    list-style: none;
    text-decoration: none;
  }

  html {
    font-family:  'Raleway', sans-serif;
    color: var(--color-text);
    background-color: var(--color-white);
    scroll-behavior: smooth;
  }

  body {
    /* background-image: url('./ryr.png');
    height: 500vh; */
    background-repeat: no-repeat;
    /*background-size: 1440px;
    background-position: top; */
  }

  h1 {
    font-size: var(--font-size-xl);
    color: var(--color-titles);
    font-family: 'Playfair Display', serif;
  }

  h2 {
    font-size: var(--font-size-lg);
    color: var(--color-titles);
    font-family:  'Raleway', sans-serif;
  }
  
  a {
    color: inherit;
  }
  
  textarea, input{
    font-family:  'Raleway', sans-serif;
    font-size: 13px;
  }

  hr {
    border: none;
  }
  .anchor{
    position: relative;
    top: -63px;
  }
</style>
